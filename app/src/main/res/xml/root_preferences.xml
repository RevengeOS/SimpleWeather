<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <SwitchPreference
        android:defaultValue="false"
        android:key="weather_enabled"
        android:title="Enable weather service" />
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/unit_array"
        android:entryValues="@array/unit_array_values"
        android:key="unit_preference"
        android:summary="%s"
        android:title="Temperature Unit" />
</PreferenceScreen>